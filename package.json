{
  "name": "ts-pbr-renderer",
  "sideEffects": false,
  "version": "0.1.0",
  "description": "Typescript Webgl2 Physically Based Renderer",
  "main": "./iwo.js",
  "types": "./types/src/index.d.ts",
  "scripts": {
    "watch": "webpack --progress --colors --watch --mode=production",
    "build": "webpack --progress --colors --mode=production",
    "builddev": "webpack --progress --colors --mode=development",
    "dev": "webpack-dev-server --content-base ./ --colors --hot --inline --mode=development --env.devServer",
    "gh-publish": "npm run builddev&&cd dist&&git add --all&&git commit -m \"Deploy to gh-pages\"&&git push origin gh-pages&&cd.."
  },
  "author": "Chris Boyd",
  "license": "MIT",
  "repository": {
    "type": "git"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "parser": "typescript",
    "semi": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "gl-matrix": "3.0.0"
  },
  "devDependencies": {
    "@types/gl-matrix": "^2.4.5",
    "@types/node": "^12.0.1",
    "@types/webgl2": "^0.0.4",
    "clean-webpack-plugin": "^2.0.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-webpack-plugin": "^2.3.0",
    "raw-loader": "^2.0.0",
    "ts-loader": "^5.3.3",
    "typescript": "3.4.5",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
