{
  "name": "iwo-renderer",
  "sideEffects": false,
  "version": "0.7.4",
  "description": "Typescript Webgl2 Physically Based Renderer",
  "main": "dist/iwo.umd.js",
  "module": "dist/iwo.es5.js",
  "types": "dist/iwo.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts && npx tscpaths -p tsconfig.json -s ./src -o ./dist",
    "prepublish": "npm run build"
  },

  "author": "caboyd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caboyd/iwo"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "parser": "typescript",
    "semi": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "rollup": "^2.79.1",
    "rollup-plugin-glslify": "^1.3.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.9.3"
  }
}
