{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ES2020",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization" : true
  },
  "typedef":[
    true,
    "call-signature",
    "property-declaration"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "rollup.config"
  ],
  "include": [
    "src"
  ]
}