{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",

    "paths":{
      "*":[
        "src/*",
        "examples/*",
        "*"
      ]
    },
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization" : true
  },
  "typedef":[
    true,
    "call-signature",
    "property-declaration"
  ],
  "exclude": [
    "node_modules"
  ]

}