{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": ".",
    "paths":{
      "*":[
        "src/*",
        "*"
      ]
    },
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization" : true
  },
  "typedef":[
    true,
    "call-signature",
    "property-declaration"
  ],
  "exclude": [
    "node_modules"
  ]

}